{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Study",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "build-css": "npx tailwindcss -i ./styles/globals.css -o ./styles/test.css --watch",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations down"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "dotenv": "^17.2.3",
    "next": "^15.5.6",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Levisq/clone-tabnews.git"
  },
  "bugs": {
    "url": "https://github.com/Levisq/clone-tabnews/issues"
  },
  "homepage": "https://github.com/Levisq/clone-tabnews#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.6.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14"
  }
}
